<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f3ff">


    <EditText
        android:id="@+id/editTextTextAllergens"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="404dp"
        android:ems="10"
        android:hint="Enter Allergens"
        android:inputType="text"
        android:padding="12dp"

        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextUnwanteds"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginBottom="208dp"
        android:ems="10"
        android:hint="Enter Unwanted Ingredients"
        android:inputType="text"
        android:padding="12dp"

        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="72dp"
        android:text="Food Tracker"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="36dp"
        android:text="OK"

        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextUnwanteds"
        app:layout_constraintVertical_bias="0.293" />

    <FrameLayout
        android:layout_width="160dp"
        android:layout_height="180dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextAllergens"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_food_bank_24" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>